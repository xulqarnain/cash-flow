{
  "appId": "com.cashrecord.app",
  "appName": "Cash Record",
  "webDir": "offline-app",
  "bundledWebRuntime": false,
  "android": {
    "allowMixedContent": true,
    "useLegacyBridge": false,
    "permissions": [
      "INTERNET",
      "ACCESS_NETWORK_STATE",
      "READ_EXTERNAL_STORAGE",
      "WRITE_EXTERNAL_STORAGE",
      "READ_MEDIA_IMAGES",
      "READ_MEDIA_VIDEO",
      "READ_MEDIA_AUDIO"
    ]
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#5468ff",
      "showSpinner": false
    }
  }
}
